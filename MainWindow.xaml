        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Авторизация в системе" Height="450" Width="800" Background="#FF9A0FFF" Closing="Window_Closing">
    <Window.Resources>
       
    </Window.Resources>
